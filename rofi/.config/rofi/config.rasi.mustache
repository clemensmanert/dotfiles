@theme "/usr/share/rofi/themes/Arc-Dark.rasi"
* {
    selected-normal-foreground:  {{OnPrimary}};
    foreground:                  {{OnBackground1}};
    normal-foreground:           @foreground;
    alternate-normal-background: {{Background3}};
    red:                         {{Red}};
    selected-urgent-foreground:  {{OnError}};
    blue:                        {{Blue}};
    urgent-foreground:           {{OnError}};
    alternate-urgent-background: {{Error}};
    active-foreground:           {{OnPrimary}};
    lightbg:                     rgba ( 238, 232, 213, 100 % );
    selected-active-foreground:  {{OnPrimary}};
    alternate-active-background: {{Primary}};
    background:                  {{Background2}};
    alternate-normal-foreground: @foreground;
    normal-background:           @background;
    lightfg:                     rgba ( 88, 104, 117, 100 % );
    selected-normal-background:  {{Primary}};
    border-color:                {{OnBackground3}};
    spacing:                     2;
    separatorcolor:              {{OnBackground3}};
    urgent-background:           {{Error}};
    selected-urgent-background:  {{Error}};
    alternate-urgent-foreground: @urgent-foreground;
    background-color:            {{Background1}};
    alternate-active-foreground: @active-foreground;
    active-background:           {{Background1}};
    selected-active-background:  {{Primary}};
}


