# Author: Clemens@Manert.de
# Volume Control
"pactl set-sink-volume 0 -3%"
  m:0x0 + c:122

"pactl set-sink-volume 0 +3%"
  m:0x0 + c:123c

"pactl set-sink-mute 0 toggle"
  m:0x0 + c:121

# Set display brightness
"brightnessctl s 10+"
  m:0x0 + c:232
"brightnessctl s 10-"
  m:0x0 + c:233

# Set display brightness gently
"brightnessctl s 1+"
  m:0x1 + c:232
"brightnessctl s 1-"
  m:0x1 + c:233

# Switch window
"rofi -show window"
  Mod4 + w

# Run something
"rofi -show run"
  Mod4 + c

# Choose password
"rofi-pass"
  Mod4 + i

# Choose from clipboard history
"rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'"
  Mod4 + v

# Choose and open a pdf
"pdfmenu"
  Mod4 + s

# Choose song and append after current
"mpd_playlist"
  Control + Mod4 + x

# Choose song and append at the end
"mpd_menu add"
  Mod4 + x

# multimediakeys
"source ~/.mpd_current; mpc toggle"
  XF86AudioPlay
"source ~/.mpd_current; mpc stop"
  XF86AudioStop
"source ~/.mpd_current; mpc next"
  XF86AudioNext
"source ~/.mpd_current; mpc del 0"
  Shift + XF86AudioNext
"source ~/.mpd_current; mpc prev"
  XF86AudioPrev

# Keyboard layout
"setxkbmap us"
  Mod4 + Shift + e
"setxkbmap de"
  Mod4 + Shift + d

# Singlescreen
"xrandr --output HDMI-1 --off; xrandr --output DVI-D-1 --off;"
  Mod4 + Shift + s

# Allscreens
"xrandr --output DVI-I-1 --auto; xrandr --output DVI-D-1 --auto --left-of DVI-I-1; xrandr --output HDMI-1 --auto --right-of  DVI-I-1"
  Mod4 + Shift + a
