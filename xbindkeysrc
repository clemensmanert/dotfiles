# Author: Clemens@Manert.de
# Volume Control
"pamixer -d 5;"
  m:0x0 + c:122
"pamixer -i 5;"
  m:0x0 + c:123
"pamixer -t;"
  m:0x0 + c:121

# Set display brightness
"xbacklight -dec 10"
  m:0x0 + c:232
"xbacklight -inc 10"
  m:0x0 + c:233

# Set display brightness gently
"xbacklight -dec 1"
  m:0x1 + c:232
"xbacklight -inc 1"
  m:0x1 + c:233

"rofi -show window"
  Mod4 + w

"dmenu_run_history"
  Mod4 + c

# Choose password
"passmenu"
  Mod4 + k

# Choose from clipboard history
"clipmenu"
  Mod4 + v

# Choose and open a pdf
"pdfmenu"
Mod4 + s

# Choose song and append after current
"mpd_menu insert"
  Shift + Mod4 + x

# Choose song and append at the end
"mpd_menu add"
  Mod4 + x

# multimediakeys
"source ~/.mpd_current; mpc toggle"
  XF86AudioPlay
"source ~/.mpd_current; mpc stop"
  XF86AudioStop
"source ~/.mpd_current; mpc next"
  XF86AudioNext
"source ~/.mpd_current; mpc del 0"
  Shift + XF86AudioNext
"source ~/.mpd_current; mpc prev"
  XF86AudioPrev

# Keyboard layout
"setxkbmap us"
  Mod4 + e
"setxkbmap de"
  Mod4 + d

